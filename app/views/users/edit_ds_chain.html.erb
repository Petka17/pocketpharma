<h1 class="text-center">Данные аптечной сети</h1>

<div class="row">
	<div class="col-sm-4 col-sm-offset-4">
		<%= form_for @ds_chain, html: { class: "form-horizontal", role: "form" }, url: update_ds_chain_user_path(@user), method: :post do |f| %>

			<div class="form-group">
				<%= f.label :name, "Имя", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Имя аптечной сети" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :phone, "Телефон", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.text_field :phone, class: "form-control", placeholder: "Основной телефон" %>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.label :description, "Описание", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.text_area :description, class: "form-control", placeholder: "Описание" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
				</div>
			</div>

		<% end %>
	</div>
</div>