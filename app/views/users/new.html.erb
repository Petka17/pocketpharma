<h1 class="text-center">Новый пользователь</h1>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4">

		<%= form_for @user, html: { class: "form-horizontal", role: "form" } do |f| %>

			<%= render 'shared/error_messages', object: f.object %>

			<div class="form-group">
				<%= f.label :name, "Имя", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Имя" %>
				</div>
			</div>
			
			<div class="form-group">
				<%= f.label :email, "Email", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password, "Пароль", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Пароль" %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label :password_confirmation, "Повторить", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Повторить пароль" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<%= f.submit "Создать", class: "btn btn-large btn-primary" %>
				</div>
			</div>

		<% end %>

	</div>
</div>