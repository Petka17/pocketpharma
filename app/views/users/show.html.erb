<div class="row">

	<div class="col-lg-6">
		<dl class="dl-horizontal">
			<dt>Имя</dt>
			<dd><%= @user.name %></dd>
			<dt>Email</dt>
			<dd><%= @user.email %></dd>

			<% unless @user.admin? %>
				<dt>Аптечная сеть</dt>
				<dd><%= @ds_chain.name %></dd>
				<dt>Основной телефон</dt>
				<dd><%= @ds_chain.phone %></dd>
				<dt>Описание</dt>
				<dd><%= @ds_chain.description %></dd>
			<% end %>
		</dl>

	</div>

	<div class="col-lg-4 left">
		<% unless @user.admin? %>
			<%= button_to "Обновить данные", edit_ds_chain_user_path(@user), class: "btn btn-sm btn-primary", method: :get %>
		<% end %>
	</div>
</div>

<div class="row">
	
	<div class="col-lg-12">
		<% unless @user.admin? %>
			<%= form_for @drugstore, url: new_drugstore_user_path(@user), method: :post, html: { class: "form-inline", role: "form" } do |f| %>
				<div class="form-group">
					<%= f.label :name, "Имя торговой точки", class: "sr-only" %>
					<%= f.text_field :name, class: "form-control", placeholder: "Имя торговой точки" %>
				</div>

				<div class="form-group">
					<%= f.label :address, "Адрес", class: "sr-only" %>
					<%= f.text_field :address, class: "form-control", placeholder: "Адрес" %>
				</div>

				<div class="form-group">
					<%= f.label :working_hours, "Режим работы", class: "sr-only" %>
					<%= f.text_field :working_hours, class: "form-control", placeholder: "Режим работы" %>
				</div>

				<div class="form-group">
					<%= f.label :phone, "Телефон", class: "sr-only" %>
					<%= f.text_field :phone, class: "form-control", placeholder: "Телефон" %>
				</div>

				<%= f.submit "Добавить", class: "btn btn-default" %>
			<% end %>
		<% end %>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-hover table-condensed">
		<tr>
			<th>Имя</th>
			<th>Адрес</th>
			<th>Режим работы</th>
			<th>Телефон</th>
		</tr>
		
		<% @drugstores.each do |ds| %>
			<tr>
				<td><%= ds.name %></td>
				<td><%= ds.address %></td>
				<td><%= ds.working_hours %></td>
				<td><%= ds.phone %></td>
			</tr>
		<% end %>

	</table>
</div>