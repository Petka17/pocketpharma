<%= form_for @drugstore, url: new_drugstore_user_path(@user), method: :post, html: { role: "form" } do |f| %>

	<div class="form-group">
		<%= f.label :name, "Имя торговой точки", class: "sr-only" %>
		<%= f.text_field :name, class: "form-control", placeholder: "Имя торговой точки" %>
	</div>

	<div class="form-group">
		<%= f.label :address, "Адрес", class: "sr-only" %>
		<%= f.text_field :address, class: "form-control", placeholder: "Адрес" %>
	</div>

	<div class="form-group">
		<%= f.label :working_hours, "Режим работы", class: "sr-only" %>
		<%= f.text_field :working_hours, class: "form-control", placeholder: "Режим работы" %>
	</div>

	<div class="form-group">
		<%= f.label :phone, "Телефон", class: "sr-only" %>
		<%= f.text_field :phone, class: "form-control", placeholder: "Телефон" %>
	</div>

	<%= f.submit "Добавить", class: "btn btn-primary center-block" %>
	
<% end %>