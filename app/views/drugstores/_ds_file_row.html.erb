<tr>
	<td><%= ds_file.file.url.split('/').last %></td>
	<td><%= number_to_human_size ds_file.file.size %></td>
	<td><%= ds_file.created_at %></td>
	<td>
		<%= form_for ds_file, url: delete_ds_file_drugstore_path(@drugstore), method: :delete do |f| %>
			<%= f.hidden_field :id %>
			<%= f.submit "Удалить", class: "btn btn-xs btn-danger", confirm: "Вы уверены, что хотите удалить этот файл?" %>
		<% end %>
	</td>
</tr>