<h1 class="text-center">Вход в систему</h1>

<div class="row">
	<div class="col-lg-4 col-lg-offset-4">
		<%= form_tag sessions_path, class: "form-horizontal", role: "form" do |f| %>

			<div class="form-group">
				<%= label_tag :email, "Email", class: "col-sm-4 control-label"  %>
				<div class="col-sm-8">
					<%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
				</div>
			</div>
			
			<div class="form-group">
				<%= label_tag :password, "Пароль", class: "col-sm-4 control-label" %>
				<div class="col-sm-8">
					<%= password_field_tag :password, nil, class: "form-control", placeholder: "Пароль" %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-4 col-sm-8">
					<%= submit_tag "Войти", class: "btn btn-large btn-primary" %>
				</div>
			</div>			

		<% end %>
	</div>
</div>