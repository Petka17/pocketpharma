<%= form_tag sessions_path, role: "form" do |f| %>

	<div class="form-group">
		<%= label_tag :email, "Email", class: "sr-only" %>
		<%= email_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
	</div>
	
	<div class="form-group">
		<%= label_tag :password, "Пароль", class: "sr-only" %>
		<%= password_field_tag :password, nil, class: "form-control", placeholder: "Пароль" %>
	</div>

	<%= submit_tag "Войти", class: "btn btn-primary center-block" %>
	
<% end %>