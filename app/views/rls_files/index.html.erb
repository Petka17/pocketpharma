<div class="row">
	<div class="col-lg-6">
		<%= form_for @rls_file, html: { role: "form" }  do |f| %>

		  <%= f.hidden_field :user_id %>
			<div class="form-group">
			  <%= f.label :rls_file, "Выберите файлы для загрузки: " %>
			  <%= f.file_field :rls_file, multiple: true, name: "rls_file[rls_file]" %>
			</div>
		<% end %>
	</div>

</div>

<div class="table-responsive">
	<table class="table table-condensed table-hover" id="file_lis">
		<tr>
			<th>Обработать</th>
			<th>Имя</th>
			<th>Файл</th>
			<th>Пользователь</th>
			<th>Удалить</th>
		</tr>
		
		<% @rls_files.each do |file| %>
			<tr>
				<td>
					<%= form_for(file, url: treat_rls_file_path(file), method: :post) do |f| %>
						<%= f.submit "Обработать", class: "btn btn-large btn-primary" %>
					<% end %>	
				</td>
				<td><%= file.name %></td>
				<td><%= file.rls_file %></td>
				<td><%= file.user_name %></td>
			 	<td>
					<%= form_for(file, url: file, method: :delete) do |f| %>
						<%= f.submit "Удалить", class: "btn btn-large btn-danger" %>
					<% end %>
				</td>
			</tr>
		<% end %>

	</table>
</div>

<%= will_paginate @rls_products %>

<div class="table-responsive">
	<table class="table table-condensed table-hover">
		<tr>
			<th>Код РЛС</th>
			<th>Название группы</th>
			<th>Категория</th>
			<th>Тип</th>
			<th>Форма</th>
			<th>Дозировка</th>
			<th>Фасовка</th>
			<th>Производитель</th>
			<th>Страна</th>
			<th>МНН</th>
			<th>Штрих-код</th>
		</tr>
		
		<% @rls_products.each do |product| %>
			<tr>
				<td><%= product.code %></td>
				<td><%= product.name %></td>
				<td><%= product.category %></td>
				<td><%= product.product_group_type %></td>
				<td><%= product.product_form %></td>
				<td><%= product.dose %></td>
				<td><%= product.pack %></td>
				<td><%= product.company %></td>
				<td><%= product.country %></td>
				<td><%= product.inn %></td>
				<td><%= product.ean %></td>
			</tr>
		<% end %>

	</table>
</div>